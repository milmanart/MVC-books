<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book List</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<header>
    <a href="/" style="position: absolute; top: 20px; left: 20px;"><button>Back</button></a>
    <h1 style="text-align: center;">Your Books</h1>
</header>
<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Year of Published</th>
        <th>Genre</th>
        <th>Rating</th>
        <th>Readed</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% books.forEach(function(book) { %>
        <tr>
            <td><%= book.id %></td>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.year %></td>
            <td><%= book.genre %></td>
            <td><%= book.rating %></td>
            <td>
                <form action="/books/readed/<%= book.id %>" method="POST">
                    <input type="checkbox" name="readed" onchange="this.form.submit()" <%= book.readed ? 'checked' : '' %>>
                </form>
            </td>
            <td>
                <a href="/books/edit/<%= book.id %>" style="display: inline;"><button>Edit</button></a>
                <form action="/books/delete/<%= book.id %>" method="POST" style="display: inline;">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>
<a href="/books/add"><button>Add New Book</button></a>
</body>
</html>
